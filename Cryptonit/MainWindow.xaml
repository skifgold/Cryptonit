<Window x:Class="Cryptonit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cryptonit"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="300"
        Height="400"
        ResizeMode="NoResize">
    <Grid >

        <Menu Height="30" VerticalAlignment="Top">
            <MenuItem Width="70" Height="30" Header="Apphine" Click="GoToAphineFrame" />
            <MenuItem Width="70" Height="30" Header="Cessar" Click="GoToCessarFrame"  />
        </Menu>
        <TextBox Width="100" Height="30" Padding="5"  Name="FirstNumberBox" TextAlignment="Center"
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Top" 
                 Margin="20,80,20,10"/>
        <TextBox Height="30" Padding="5"  Name="SecondNumberBox" 
                 TextAlignment="Center"
                 VerticalAlignment="Bottom"
                 Width="100"
                 Margin="20,10,20,190"/>


        <Button Content="Check" Width="100" Height="30"  Click="CheckForSimple" HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"
                Margin="80,80,80,80"/>

        <!--<TextBox Width="200" Margin="251,10,66,65" Name="AnswerBox"/>-->


    </Grid>
</Window>
